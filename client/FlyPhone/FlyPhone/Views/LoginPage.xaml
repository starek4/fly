<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyPhone.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login"></Label>
            <Entry Text="{Binding Login}"></Entry>
            <Label Text="Password"></Label>
            <Entry IsPassword="True" Text="{Binding Password}"></Entry>
            <Button Command="{Binding LoginButtonCommand}" Text="Login"></Button>
            <Label TextColor="Red" Text="{Binding Status}"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>