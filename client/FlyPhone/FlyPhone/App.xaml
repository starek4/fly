<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyPhone.App">
	<Application.Resources>
        <ResourceDictionary>
            <Style x:Key="StickyBlueButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#3399FF"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style x:Key="StickyBlueButtonDisabled" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#dfdfdf"/>
                <Setter Property="TextColor" Value="White"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
